.btnmenu
	position				absolute
	font-weight				bold
	color 					#777
	-webkit-transition 		all 0.3s
	-moz-transition 		all 0.3s
	cursor					pointer

.btnmenu:hover
	font-size 				30px
	color 					#333
	-webkit-transition 		all 0.5s
	-moz-transition 		all 0.5s

.btnmenuselect
	position				absolute
	font-size 				50px
	color 					#999
	-webkit-transition 		all 0.5s
	-moz-transition 		all 0.5s

.topLeft
	bottom 					100%
	left 					0
	
.topRight
	bottom					100%
	right 					0
	
.bottomLeft
	top 					100%
	left 					0

.bottomRight
	top 					100%
	right 					0