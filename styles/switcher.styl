.switcher
	position				fixed
	bottom 					0
	right 					0
	width 					170px
	height 					30px
	padding 				10px 0px
	background 				#FFF
	border-radius 			5px 0px 0px 0px
	-moz-border-radius 		5px 0px 0px 0px
	
.switcher menu
	width					150px
	height					25px
	position				absolute
	left					0
	top						0
	right					0
	bottom					0
	margin					auto
	padding-left			1px

.switcher li 
	float					left
	height 					24px
	width 					24px
	margin-left 			5px
	cursor 					pointer
	display 				inline
	border 					1px solid #BBB

.switcher li img
	width 					24px
	height 					24px
	position				absolute   

.switcher li:first-child
	margin-left 			0px